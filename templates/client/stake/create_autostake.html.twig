<div class="bet-form-footer" ng-controller="AutoStakeController as autostake" ng-init="autostake.init('{{ isHasAutoStake }}', app.isUserLoggedIn(), '{{ auction["id"] }}')" ng-cloak>
    <div class="betting-settings-wrap">
        <div class="settings-title">
            <a href="" ng-click="autostake.buyProduct();" class="bttn bttn-sm bttn-rounded bttn-luminous-red">Купить товар</a>
        </div>
        <div class="settings-title">
            Автоставки

            <label id="autobet-switch-input" class="switch-pill" ng-click="autostake.createOrCancelAutoStake()">
                <input type="checkbox" ng-checked="autostake.isHasAutoStake" ng-disabled="!!autostake.errorMessage || autostake.isRequestProcessing">
                <span class="switch-label"></span>
                <span class="switch-handle"></span>
            </label>

            <span id="product-autobet-settings-trigger"><i class="fa fa-caret-down"></i></span>
        </div>

        <div class="settings autostake-settings" style="display: none;">
            <div class="settings-categories-wrap">
                <div class="bet-period-settings">
                    <p>Играть:</p>
                    <p>До победы</p>
                </div>

                <div class="bet-parameters-settings">
                    <p>Параметры:</p>
                    <p>ставка: < 2 сек</p>
                    <p>количество</p>
                    <span>ставок</span>

                    <input ng-model="autostake.countStakes" type="text" id="auto_stake_count" class="fg-input count-stakes-autostake" style="margin-top: 6px; padding: 8px 15px; width: 100px;">
                </div>
            </div>

            <div class="fg-invalid-msg" style="display: block;" ng-bind="autostake.errorMessage"></div>

            <div id="bet-btn-wrap">
                <button ng-show="!autostake.isHasAutoStake" class="bttn bttn-xs bttn-rounded bttn-luminous-red" ng-click="autostake.createOrCancelAutoStake()">Включить</button>
            </div>
        </div>
    </div>
</div>

