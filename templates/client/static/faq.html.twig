{% extends 'base.html.twig' %}
{% block body %}
    <main class="main">

        <section id="faq-sect">
            <div class="container">
                <div class="row">
                    <div class="col-12">

                        <div class="sect-title">
                            <h4>Вопросы-ответы</h4>
                        </div>

                        <div class="faq-descr-block">
                            {% for faq in faqs %}
                                <h4 class="title-highlight">{{ faq.question }}</h4>

                                <div class="box-space-left text-lg-right">
                                    {{ faq.answer | raw}}
                                </div>

                                <br>
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>
        </section>

    </main>
{% endblock %}